<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auftrag_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/auftrag_detail_backgound"
    android:orientation="vertical">

    <TextView
        android:id="@+id/auftrag_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:text="Titel" />

    <TextView
        android:id="@+id/auftrag_view_arbeit_ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/auftrag_view_id"
        android:layout_below="@+id/auftrag_view_id"
        android:layout_marginTop="29dp"
        android:text="Arbeit_Ort" />

    <TextView
        android:id="@+id/auftrag_view_datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/auftrag_view_arbeit_ort"
        android:layout_marginEnd="28dp"
        android:text="datum" />

</RelativeLayout>